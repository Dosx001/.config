client.focused          #333333 #1a1a1a #b30000 #999999
client.focused_inactive #333333 #000000 #b30000 #999999
client.unfocused        #1a1a1a #000000 #b30000 #999999
client.urgent           #2f343a #990000 #000000 #999999

mode "screenshot" {
  bindsym x exec --no-startup-id maim "/home/$USER/Pictures/$(date)", mode "default"
  bindsym w exec --no-startup-id maim --window $(xdotool getactivewindow) "/home/$USER/Pictures/$(date)", mode "default"
  bindsym s exec --no-startup-id maim --select "/home/$USER/Pictures/$(date)", mode "default"

  bindsym c exec --no-startup-id maim | xclip -selection clipboard -t image/png, mode "default"
  bindsym e exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png, mode "default"
  bindsym d exec --no-startup-id maim --select | xclip -selection clipboard -t image/png, mode "default"

  bindsym Escape mode "default"
}
bindsym $mod+p mode "screenshot"

exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# swap caps lock and escape
exec_always --no-startup-id xmodmap -e "clear lock"
exec_always --no-startup-id xmodmap -e "keycode 9 = Caps_Lock NoSymbol Caps_Lock"
exec_always --no-startup-id xmodmap -e "keycode 66 = Escape NoSymbol Escape"

